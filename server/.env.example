# Environment Configuration for WorkSync Backend
# Copy this file to .env and fill in your values

# Application Environment
NODE_ENV=development
PORT=4100
FRONTEND_URL=http://localhost:3100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3100,http://localhost:3100

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD= 
DB_NAME=worksync

# Authentication
JWT_SECRET=development-secret-key-change-in-production

# Collaboration Features
SOCKETIO_PORT=4100
SOCKETIO_CORS_ORIGIN=http://localhost:3000
YJS_WEBSOCKET_PORT=1234
YJS_PERSISTENCE_DIR=./yjs-documents

# Email Service (Optional - for notifications)
# Example: use an SMTP provider (Gmail, SendGrid, Mailgun) or a transactional email API
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=you@example.com
EMAIL_PASSWORD=your-email-app-password-or-api-key

# Redis (Optional - for scaling)
REDIS_URL=redis://localhost:6379
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# SMTP (alternate naming conventions supported by the code)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASS=your-email-app-password-or-api-key

# Security
MINIMAL_ROUTES=0