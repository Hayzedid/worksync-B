# Phase 3 Environment Configuration
# Copy to .env and customize for your environment

# Application
NODE_ENV=production
PORT=3000
API_VERSION=v1

# PostgreSQL Database (New for Phase 3)
DATABASE_URL=postgresql://username:password@localhost:5432/worksync_v3
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=username
POSTGRES_PASSWORD=password
POSTGRES_DATABASE=worksync_v3
POSTGRES_SSL=false

# Redis Cache & Sessions
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication & Security
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=12

# File Storage (AWS S3 or compatible)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=worksync-files
S3_REGION=us-east-1
S3_ENDPOINT=https://s3.amazonaws.com
FILE_UPLOAD_MAX_SIZE=10485760
FILE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-app-password
EMAIL_FROM=WorkSync <noreply@worksync.com>

# Security & CORS
CORS_ORIGIN=https://your-frontend-domain.com,http://localhost:3000
CORS_CREDENTIALS=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# Socket.IO Real-time
SOCKET_IO_CORS_ORIGIN=https://your-frontend-domain.com,http://localhost:3000
SOCKET_IO_TRANSPORTS=websocket,polling

# Time Tracking
DEFAULT_HOURLY_RATE=50.00
AUTO_STOP_TIMER_DURATION=3600
TIMEZONE_DEFAULT=UTC

# Background Jobs
BULL_REDIS_URL=redis://localhost:6379
JOB_CONCURRENCY=5
EMAIL_QUEUE_CONCURRENCY=3

# Monitoring & Logging
LOG_LEVEL=info
LOG_FORMAT=combined
SENTRY_DSN=your-sentry-dsn-here
NEW_RELIC_LICENSE_KEY=your-newrelic-key-here

# Elasticsearch (Optional)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=worksync

# Backup & Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=worksync-backups

# Performance
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20
CACHE_TTL=3600

# Features Flags
FEATURE_KANBAN_BOARDS=true
FEATURE_TIME_TRACKING=true
FEATURE_MILESTONES=true
FEATURE_RESOURCE_ALLOCATION=true
FEATURE_PROJECT_TEMPLATES=true
FEATURE_ADVANCED_ANALYTICS=true

# External Integrations
GOOGLE_CALENDAR_API_KEY=
SLACK_WEBHOOK_URL=
GITHUB_INTEGRATION_TOKEN=

# Testing
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/worksync_test
JEST_TIMEOUT=30000
